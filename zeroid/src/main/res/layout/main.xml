    <ImageView
        android:id="@+id/imgCenter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/right_left_arrow" />

    <Button
        android:id="@+id/btnRobot"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgCenter"
        android:background="@drawable/button_shape"
        android:drawableTop="@drawable/tachikoma180x180"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnController"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgCenter"
        android:background="@drawable/button_shape"
        android:drawableTop="@drawable/joystick180x180"
        android:gravity="center_horizontal" />

